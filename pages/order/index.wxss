/*背景*/
.huishou_bg{
  width: 100%;
  height: 730rpx;
  background-image:url(https://img-blog.csdnimg.cn/74e2f71106bf4d4ebb9cf191eabaf6eb.png?x-oss-process=image/watermark,type_d3F5LXplbmhlaQ,shadow_50,text_Q1NETiBA6ZOB6ZSF6YeM5rS7552A55qE5aSn6bmF,size_11,color_FFFFFF,t_70,g_se,x_16);
