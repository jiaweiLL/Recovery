/*表单*/
.huishou_form{
  width: 96%;
  height:670rpx;
  position:relative;
  margin: 0rpx auto;
  background-color: #fff;
  top:100rpx;
  border-radius: 10px;
}

.form{
  position: relative;
  top: 20rpx;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #EDEBF4;
  margin: 0px auto;
  font-size: 24rpx;
}

.form_last{
  position: relative;
  top: 20rpx;
  width: 84%;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0px auto;
  margin-top: 50rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #EDE03A;
  box-shadow:2px 2px 10px #ccc;
  border-radius: 10px;
  color: #fff;
}

.form_last:active{
  background-color: #EACF02;
}

button::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 0px solid #fff;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}

.title{
  color: #999999;
  float: left;
  font-size: 26rpx;
}

